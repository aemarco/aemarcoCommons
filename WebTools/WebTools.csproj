<Project Sdk="Microsoft.NET.Sdk">

	<!-- project definition -->
	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<RootNamespace>aemarcoCommons.WebTools</RootNamespace>
		<AssemblyName>aemarcoCommons.WebTools</AssemblyName>
	</PropertyGroup>

	<!-- project references -->
	<ItemGroup>
		<ProjectReference Include="..\ToolboxAppOptions\ToolboxAppOptions.csproj" />
		<ProjectReference Include="..\Toolbox\Toolbox.csproj" />
	</ItemGroup>

	<!-- nuget references-->
	<ItemGroup>
		<PackageReference Include="Serilog.AspNetCore" Version="8.0.3" />
	</ItemGroup>

	<!-- proj build-->
	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
		<None Update="webtools-schema.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<!-- nuget build-->
	<PropertyGroup>
		<Description>c# web tools collection</Description>
		<PackageTags>WebTools</PackageTags>
	</PropertyGroup>
	<ItemGroup>
		<None Update="..\README.md" Pack="false" />
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
