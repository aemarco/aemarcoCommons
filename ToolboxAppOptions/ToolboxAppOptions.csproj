<Project Sdk="Microsoft.NET.Sdk">

	<!-- project definition -->
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<RootNamespace>aemarcoCommons.ToolboxAppOptions</RootNamespace>
		<AssemblyName>aemarcoCommons.ToolboxAppOptions</AssemblyName>
	</PropertyGroup>

	<!-- project references -->
	<ItemGroup>
		<ProjectReference Include="..\Extensions\Extensions.csproj" />
	</ItemGroup>

	<!-- nuget references -->
	<ItemGroup>
		<PackageReference Include="Autofac.Extensions.DependencyInjection" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="7.0.1" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="7.0.0" />

		<PackageReference Include="DotNet.ReproducibleBuilds" Version="1.1.1">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>


	<!-- nuget build-->
	<PropertyGroup>
		<PackageId>aemarcoToolboxAppOptions</PackageId>
		<Product>aemarcoToolboxAppOptions</Product>
		<Description>Tool for handling setup for the Options pattern</Description>
		<PackageTags>IOptions IConfiguration</PackageTags>
		<PackageIcon>options.png</PackageIcon>

		<EnablePackageValidation>false</EnablePackageValidation>
		<PackageValidationBaselineVersion>1.1.3</PackageValidationBaselineVersion>
	</PropertyGroup>
	<ItemGroup>
		<None Update="options.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
